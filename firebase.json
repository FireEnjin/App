{
  "hosting": {
    "public": "www",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/graphql",
        "function": "graphql"
      },
      {
        "source": "/render/**",
        "function": "render"
      },
      {
        "source": "/upload",
        "function": "upload"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}